<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:orientation="horizontal"
    android:layout_marginBottom="10dp"
    android:background="@drawable/item_design">

    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="16dp">

        <TextView
            android:id="@+id/titleitem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:text="1000$"
            android:textAlignment="center"
            android:textColor="#000C5D"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/describeItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="19dp"
            android:text=".."
            android:textAlignment="center"
            android:textColor="#000C5D"
            android:textSize="16sp" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/dateItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="5/1/2000"
            android:textAlignment="center"
            android:textColor="#F63EA5"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/itemTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="12:00 Am"
            android:textAlignment="center"
            android:textColor="#F63EA5"
            android:textSize="17sp" />

        <Button
            android:id="@+id/itemEditButton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@+id/dateItem"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="45dp"
            android:layout_marginRight="0dp"
            android:background="@drawable/ic_baseline_edit_24" />


    </RelativeLayout>



</LinearLayout>